---
import type { Post } from "../../type";

type Props = {
    post: Post;
}

const { post } = Astro.props;
---

<article class="space-y-1 pb-10">
    <h1 class="text-3xl font-extrabold leading-9 tracking-tight dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-5xl md:leading-14">
        {post.title}
    </h1>
    <div class="prose" set:html={post.body}></div>
</article>
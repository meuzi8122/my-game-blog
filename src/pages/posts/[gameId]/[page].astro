---
import type { GetStaticPathsOptions } from "astro";
import { PostClient } from "../../../client/post";
import Layout from "../../../components/layout.astro";
import List from "../../../components/list.astro";
import type { Game,Post } from "../../../type";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
    const posts = await PostClient.findPosts();

    const GAMES: Game[] = [{id: "lor", title: "Library of Ruina"}, {id: "lcb", title: "Limbus Company"}];

    return GAMES.map(game => paginate(
        posts.filter(post => post.game.id === game.id),
        { params: { gameId: game.id }, props: { game } }
    ));
}

type Props = {
    page: {
        data: Post[];
        total: number;
        url: {
            prev: string;
            next: string;
        }
    }
    game: Game;
}

const { page, game } = Astro.props;

const paginationClassName = "btn btn-outline normal-case";
---

<Layout title={`${game.title} | プロムンゲーメモ`}>
    <div>
        <div>
            <div class="space-y-2 pt-6 pb-8 md:space-y-5">
                <h1 class="text-3xl font-extrabold">{game.title}</h1>
                <div class="divider"></div>
            </div>
        </div>
        <List posts={page.data} />
        {page.total && 
            <div class="btn-group grid grid-cols-2">
                <a class={page.url.prev ? paginationClassName : `${paginationClassName} pointer-events-none`} href={page.url.prev}>Older Posts</a>
                <a class={page.url.next ? paginationClassName : `${paginationClassName} pointer-events-none`} href={page.url.next}>Newer Posts</a>
            </div>
        }
    </div>
</Layout>

